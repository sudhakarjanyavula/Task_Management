<!-- app/views/shared/_task_table.html.erb -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<table class="task-table">
  <thead>
    <tr>
      <th>S.No</th>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks&.each_with_index do |task, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date.strftime('%Y-%m-%d') if task.due_date %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at.strftime('%Y-%m-%d %H:%M:%S') if task.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
